<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgProductThumb"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_iconmonstr_shopping_bag"
        />
    <TextView
        android:id="@+id/txtProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Title"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/imgProductThumb"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:maxLines="2"
        />
    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/txtProductTitle"
        android:text="Rp.999999"
        android:textSize="18dp"
        android:textColor="@color/red_light" />
    <ImageView
        android:id="@+id/imgProductRateStar"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:src="@drawable/stars_4_5"
        android:layout_below="@+id/txtProductPrice"
        android:layout_marginVertical="0dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/txtProductSellCount"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="400 Terjual"
        android:textSize="13dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgProductRateStar"
        android:layout_below="@+id/txtProductPrice"
        />

    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProductRateStar"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_iconmonstr_location_pin" />
    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProductRateStar"
        android:layout_toRightOf="@id/imgLocation"
        android:text="Location"
        android:textSize="12dp"
        android:layout_marginVertical="10dp"
        />

</RelativeLayout>